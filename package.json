{
  "name": "pastree-website",
  "version": "1.0.0",
  "description": "Modern React website for Pastree clipboard manager browser extension",
  "author": "Pastree Team",
  "homepage": "https://pastr.ee",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "debug:build": "DEBUG=* next build 2>&1 | tee build-debug.log",
    "debug:dev": "DEBUG=* next dev 2>&1 | tee dev-debug.log",
    "debug:analyze": "ANALYZE=true next build",
    "debug:type-check": "tsc --noEmit --pretty",
    "debug:lint-detailed": "eslint . --ext .ts,.tsx,.js,.jsx",
    "debug:deps": "npm ls --depth=0",
    "debug:outdated": "npm outdated",
    "debug:audit": "npm audit --audit-level=moderate",
    "debug:clean": "rm -rf .next node_modules/.cache build-debug.log dev-debug.log",
    "debug:full-check": "npm run debug:type-check && npm run debug:lint-detailed && npm run debug:build",
    "debug:memory": "node --max-old-space-size=4096 node_modules/.bin/next build",
    "debug:verbose": "NODE_OPTIONS='--trace-warnings' next build --debug",
    "debug:tailwind": "npx tailwindcss --input src/app/globals.css --output debug-output/tailwind-output.css --watch",
    "debug:tailwind-build": "npx tailwindcss --input src/app/globals.css --output debug-output/tailwind-build.css"
  },
  "dependencies": {
    "critters": "^0.0.23",
    "fuse.js": "^7.1.0",
    "next": "15.5.4",
    "picocolors": "^1.1.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "source-map-js": "^1.2.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
